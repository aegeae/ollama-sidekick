{
  "name": "ollama-sidekick",
  "private": true,
  "version": "0.9.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .vite",
    "dev": "vite build --watch --mode debug",
    "gen:icons": "node scripts/gen-icons.mjs",
    "build": "vite build",
    "build:debug": "vite build --mode debug",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "package:zip": "npm run build && rimraf ollama-sidekick.zip && cd dist && zip -r ../ollama-sidekick.zip . -x '*.map' -x '**/.DS_Store'",
    "test": "rimraf .test-dist && tsc -p tsconfig.tests.json && node --test .test-dist/tests/*.test.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.13.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.3",
    "sharp": "^0.33.5",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-static-copy": "^3.2.0"
  }
}
